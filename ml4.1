%class -1 distribution
mu=[0;0];
Simga=eye(2);
%class +1 distribution
r=2+rand(1,Nc(2));%radius
theta=-pi+rand(1,Nc(2))*2*pi;%theta
x=zeros(n,N);
for i=1:N
    if label(i)==0;
        x(:,i)=mvnrnd(mu,Sigma,Nc(1))';
    else
        x(1,i)=r.*cos(theta);
        x(2,i)=r.*sin(theta);
    end
